	drawStringNum %SPEED
	moveCursor 0, -2
	drawStringNum %SPEED
	moveCursor -1 * 1.333 * %VIDHEIGHT / %VIDWIDTH, 0
	drawStringNum %SPEED
	moveCursor -1 * 1.333 * %VIDHEIGHT / %VIDWIDTH, 0
	drawStringNum %SPEED
	moveCursor 0, 1
	drawStringNum %SPEED
	moveCursor 0, 1
	drawStringNum %SPEED
	moveCursor 1 * 1.333 * %VIDHEIGHT / %VIDWIDTH, 0
	drawStringNum %SPEED
	moveCursor 0, -1

	setColor 1 1 1 1
	drawStringNum %SPEED
